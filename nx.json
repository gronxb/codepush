{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "release": {
    "projects": ["*", "!@hot-updater/docs", "!examples/**/*"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:type": {
      "dependsOn": ["^test:type"]
    }
  },
  "defaultBase": "main"
}
