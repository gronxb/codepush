{
  "name": "@hot-updater/plugin-core",
  "version": "0.0.4",
  "type": "module",
  "description": "React Native OTA solution for self-hosted",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
