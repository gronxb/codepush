    "@types/connect": "^3.4.38",
    "@types/cosmiconfig": "^6.0.0",
    "@types/plist": "^3.0.5",
    "@types/prompts": "^2.4.9",
    "@types/react": "^18.3.3",
    "typescript-transform-paths": "^3.4.7"
  }
