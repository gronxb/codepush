{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"],
      "@/package.json": ["package.json"]
    },
    "outDir": "lib",
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
  },
  "include": ["src/plugins"],
}
