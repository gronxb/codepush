{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "types": ["react", "better-sqlite3"],
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
    },
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts", "src/**/*.spec.ts"]
}
